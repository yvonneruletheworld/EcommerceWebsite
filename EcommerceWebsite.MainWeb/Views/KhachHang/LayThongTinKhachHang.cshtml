@using EcommerceWebsite.Utilities.ViewModel
@model ThongTinKhachHangVM
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link href="~/css/detail/style.css" rel="stylesheet" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            <h2 class="h3 mb-4 page-title">THÔNG TIN CÁ NHÂN</h2>
            <div class="my-4">
                <form>
                    <hr class="my-4" />
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="firstname">Họ tên</label>
                            <input type="text" id="firstname" class="form-control" placeholder="Nhập họ tên" value="@Model.HoTen" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="abc@gmail.com" value="@Model.Email" />
                    </div>
                    <div class="form-group">
                        <label for="inputAddress5">Số điện thoại</label>
                        <input type="text" class="form-control" id="inputAddress5" placeholder="0123456789" value="@Model.PhoneNumber" />
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Giới tính</label>
                            <select id="GetGioiTinh" class="form-control">
                                @if (Model.GioiTinh == true)
                                {
                                    <option selected="">Nam</option>
                                    <option>Nữ</option>
                                }
                                else
                                {
                                    <option>Nam</option>
                                    <option selected="">Nữ</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-8"></div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress5">Địa chỉ giao hàng</label>
                        <button type="submit" class="btn bg-info text-white ml-3">Quản lý địa chỉ</button>
                    </div>
                    <hr class="my-4" />
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="inputPassword4">Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" id="inputPassword5" />
                            </div>
                            <div class="form-group">
                                <label for="inputPassword5">Mật khẩu mới</label>
                                <input type="password" class="form-control" id="inputPassword5" />
                            </div>
                            <div class="form-group">
                                <label for="inputPassword6">Xác nhận mật khẩu</label>
                                <input type="password" class="form-control" id="inputPassword6" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">Yêu cầu mật khẩu</p>
                            <p class="small text-muted mb-2">Để tạo mật khẩu mới, bạn phải đáp ứng tất cả các yêu cầu sau:</p>
                            <ul class="small text-muted pl-4 mb-0">
                                <li>Tối thiểu 6 ký tự.</li>
                                <li>Ít nhất một ký tự đặc biệt.</li>
                                <li>Ít nhất một số.</li>
                                <li>Không được giống với mật khẩu trước đó.</li>
                            </ul>
                        </div>
                    </div>
                    <button type="submit" class="btn bg-danger text-white">Lưu thông tin</button>
                </form>
            </div>
        </div>
    </div>
</div>