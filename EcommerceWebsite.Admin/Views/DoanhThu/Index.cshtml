@using EcommerceWebsite.Utilities.ViewModel
@using EcommerceWebsite.Data.Enum
@model DoanhThuVM
@{
    if (Model == null)
    {
        return;
    }
    var sanPham = Model.SanPham;
    Model.SanPham.giaBan = Model.SanPham.BangGia.FirstOrDefault().GiaBan;
    var dicNhapBan = Model.ListSanPhamNhapVaBan;
    var listDinhLuong = sanPham.ListThongSo;
    var listDanhMuc = Model.ListDanhMuc;
    var listThongSo = Model.ListDinhLuong;
    var listKeys = dicNhapBan.Keys.ToList();
    var ngayNhapCuoi = listKeys.LastOrDefault();
    var giaNhapGanNhat = dicNhapBan[ngayNhapCuoi].FirstOrDefault().DonGiaNhap;
}

<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">@*@sanPham.TenSanPham*@</h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Danh sách sản phẩm </a></li>
                        <li class="breadcrumb-item"><a href="#!">Chi tiết</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->
    <!-- [ Main Content ] start -->
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="padding-left: 50px; padding-right: 50px; padding-bottom: 50px">
                <h5 class="mt-5">Thông tin sản phẩm</h5>
                <hr>
                <form class="needs-validation" asp-action="CapNhatSanPham" method="post" asp-controller="DoanhThu">
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="col-3"></div>
                        <div class="col-3">
                            <button class="btn mt-3 mb-3 btn-primary float-left" type="button" onclick="SubmitForm()">Cập nhật thông tin</button>
                        </div>
                        @*<button class="btn mt-3 mb-3 btn-primary" type="button" onclick="SubmitForm()">Cập nhật lợi nhuận</button>*@
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <label class="form-label" asp-for="SanPham.MaSanPham">ID</label>
                            <input type="text" asp-for="SanPham.MaSanPham" placeholder="ID" class="form-control" readonly />
                        </div>
                        <div class="col-md-8 mb-8">
                            <label class="form-label" asp-for="SanPham.TenSanPham">Tên Sản Phẩm</label>

                            <input type="text" asp-for="SanPham.TenSanPham" placeholder="Tên sản phẩm" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 mb-2">
                            <label class="form-label" asp-for="SanPham.SoLuongTon">Số lượng tồn</label>
                            <input type="number" class="form-control text-box single-line" style="max-width: 100px;" asp-for="SanPham.SoLuongTon" value="@sanPham.SoLuongTon" id="SoLuongTon" name="SoLuongTon" readonly />
                        </div>
                        <div class="col-md-5 mb-5">
                            <label class="form-label" asp-for="SanPham.MaLoai">Danh mục</label>
                            <select id="danh-muc-selection-id" class="form-control text-box single-line" name="MaLoai">
                                @foreach (var item in listDanhMuc)
                                {
                                    @if (item.DanhMucCon != null && item.DanhMucCon.Count() > 0)
                                    {
                                        <optgroup label="@item.TenDanhMuc">
                                            @foreach (var dmc in item.DanhMucCon)
                                            {
                                                <option value="@dmc.MaDanhMuc">@dmc.TenDanhMuc</option>
                                            }
                                        </optgroup>
                                    }
                                    else
                                    {
                                        <option value="@item.MaDanhMuc">@item.TenDanhMuc</option>

                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-5 mb-5">
                            <label class="form-label" asp-for="SanPham.NhanHieu">Nhãn Hiệu</label>
                            <select class="form-control text-box single-line" id="nhan-hieu-selection-id" name="NhanHieu">
                                @foreach (var item in Model.ListNhanHieu)
                                {
                                    <option value="@item.MaHang">@item.TenHang</option>
                                }
                            </select>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" onclick="onCheckPercent()" type="checkbox" value="" id="percentageAgree">
                            <label class="form-check-label">Thiết lập giá theo phần trăm lợi nhuận (%)</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label" asp-for="SanPham.giaBan">Giá hiện tại</label>
                            <input type="text" class="form-control text-box single-line" asp-for="SanPham.giaBan" value="@string.Format("{0:0,0}",sanPham.giaBan)" id="giaBan" name="giaBan" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Giá nhập gần nhất</label>
                            <input type="text" class="form-control text-box single-line" value="@string.Format("{0:0,0}",giaNhapGanNhat)" id="GiaNhapGanNhat" readonly name="GiaNhapGanNhat" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label" id="loi-nhuan-title">Lợi nhuận</label>
                            <input type="text" class="form-control text-box single-line" onkeyup="updateProductPride(this.value)" id="LoiNhuan" name="LoiNhuan" />
                            <span id="loi-nhuan-error" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label" asp-for="SanPham.ThanhTien">Giá Mới</label>
                            <input type="text" asp-for="SanPham.ThanhTien" class="form-control text-box single-line" id="ThanhTien" name="ThanhTien" readonly />
                        </div>

                    </div>
                </form>

            </div>
        </div>

    </div>
    <div class="row">
