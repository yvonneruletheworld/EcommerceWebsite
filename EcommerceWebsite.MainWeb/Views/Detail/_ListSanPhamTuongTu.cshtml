@using EcommerceWebsite.Utilities.Output.Main
@model List<SanPhamOutput>
    <section class="product-area li-laptop-product pt-30 pb-50">
        <div class="container">
            <div class="row">
                <!-- Begin Li's Section Area -->
                <div class="col-lg-12">
                    <div class="li-section-title">
                            <h2>
                                <span>Sản phẩm tương tự</span>
                            </h2>
                    </div>
                    <div class="row">
                        <div class="product-active owl-carousel">
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <div class="col-lg-12">
                                        <!-- single-product-wrap start -->
                                        <div class="single-product-wrap">
                                            <div class="product-image">
                                                <a href="single-product.html">
                                                    <img src="@item.HinhAnh??https://i.ibb.co/jzN4xyb/Blue-with-Gold-Laurel-Education-Logo-9-1-removebg-preview.png" alt="@item.TenSanPham">
                                                </a>
                                            </div>
                                            <div class="product_desc">
                                                <div class="product_desc_info">
                                                    <div class="product-review">
                                                        <h5 class="manufacturer">
                                                            <a href="@Url.Action("Index", "CuaHang",new {loaiHang =  item.MaLoai})">@item.LoaiSanPham</a>
                                                        </h5>
                                                        <div class="rating-box">
                                                            <ul class="rating">
                                                                <li><i class="fa fa-star-o"></i></li>
                                                                <li><i class="fa fa-star-o"></i></li>
                                                                <li><i class="fa fa-star-o"></i></li>
                                                                <li class="no-star"><i class="fa fa-star-o"></i></li>
                                                                <li class="no-star"><i class="fa fa-star-o"></i></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <h4><a class="product_name" href="@Url.Action("Index", "Detail", new { prdId = item.MaSanPham, prdMaDanhMuc = item.MaLoai })">@item.TenSanPham</a></h4>
                                                    <div class="price-box">
                                                        <span class="new-price">@string.Format("{0:0,0}", item.giaBan) VNĐ</span>
                                                    </div>
                                                </div>
                                                <div class="add-actions">
                                                    <input id="giaSanPham-@item.MaSanPham" value="@item.giaBan" hidden />
                                                    <ul class="add-actions-link">
                                                        <li class="add-cart"><a href="#" class="btn-add-cart" data-id="@item.MaSanPham">Thêm vào giỏ</a></li>
                                                        @if (!item.TrangThaiYeuThich)
                                                        {
                                                            <li><a class="links-details btn-them-yeuthich" data-id="@item.MaSanPham" href="#"><i class="fa fa-heart-o"></i></a></li>
                                                        }
                                                        else
                                                        {
                                                            <li><a class="links-details btn-them-yeuthich" style="background: #ad172c; border-radius: 5px " data-id="@item.MaSanPham" href="#"><i class="fa fa-heart-o"></i></a></li>
                                                        }
                                                        <li><a href="#" title="quick view" class="quick-view-btn" data-toggle="modal" data-target="#exampleModalCenter"><i class="fa fa-eye"></i></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- single-product-wrap end -->
                                    </div>
                                }
                            }
                                </div>
                    </div>
                </div>
                <!-- Li's Section Area End Here -->
            </div>
        </div>
    </section>

    <!-- Product Area End Here -->