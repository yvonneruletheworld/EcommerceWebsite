<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TRIPLE V - Admin Điện thoại, phụ kiện,...</title>


    <link rel="icon" src="~/images/favicon.svg" type="image/x-icon" />
    <link href="~/fonts/feather.css" rel="stylesheet" />
    <link href="~/fonts/fontawesome.css" rel="stylesheet" />
    <link href="~/fonts/material.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" id="main-style-link" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    @using Microsoft.AspNetCore.Http
</head>
<body>
   
    <!-- [ Pre-loader ] start -->
    <div class="loader-bg">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>
    <!-- [ Pre-loader ] End -->
    <!-- [ Mobile header ] start -->
    <div class="pc-mob-header pc-header">
        <div class="pcm-logo">
            <img src="~/images/logo.png" />
        </div>
        <div class="pcm-toolbar">
            <a href="#!" class="pc-head-link" id="mobile-collapse">
                <div class="hamburger hamburger--arrowturn">
                    <div class="hamburger-box">
                        <div class="hamburger-inner"></div>
                    </div>
                </div>
            </a>
            <a href="#!" class="pc-head-link" id="headerdrp-collapse">
                <i data-feather="align-right"></i>
            </a>
            <a href="#!" class="pc-head-link" id="header-collapse">
                <i data-feather="more-vertical"></i>
            </a>
        </div>
    </div>
    <!-- [ Mobile header ] End -->
    <!-- [ navigation menu ] start -->
    <nav class="pc-sidebar ">
        <div class="navbar-wrapper">
            <div class="m-header">
                <a href="@Url.Action("Index","Home")" class="b-brand">
                    <!-- ========   change your logo hear   ============ -->
                    <img src="~/images/logo.png" width="90%" />
                </a>
            </div>
            <div class="navbar-content">
                <ul class="pc-navbar">
                    <li class="pc-item pc-caption">
                        <label>Tổng quan</label>
                    </li>
                    <li class="pc-item">
                        <a href="@Url.Action("Index","Home")" class="pc-link "><span class="pc-micon"><i data-feather="home"></i></span><span class="pc-mtext">Trang chủ</span></a>
                    </li>
                    <li class="pc-item pc-caption">
                        <label>Hệ thống quản lý</label>
                    </li>
                    @*sản phẩm*@
                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link "><span class="pc-micon"><i data-feather="grid"></i></span><span class="pc-mtext">SẢN PHẨM</span><span class="pc-arrow"><i data-feather="chevron-right"></i></span></a>
                        <ul class="pc-submenu">
                            <li class="pc-item"><a class="pc-link" href="@Url.Action("DanhSachSanPham","SanPham")">Sản phẩm</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Danh mục</a></li>
                            <li class="pc-item"><a class="pc-link" href="@Url.Action("Index","HUIManage")">Quản lý Combo</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Hãng</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Đánh giá sản phẩm</a></li>
                        </ul>
                    </li>
                    @*Đơn hàng*@
                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link "><span class="pc-micon"><i data-feather="edit"></i></span><span class="pc-mtext">ĐƠN HÀNG</span><span class="pc-arrow"><i data-feather="chevron-right"></i></span></a>
                        <ul class="pc-submenu">
                            <li class="pc-item"><a class="pc-link" href="@Url.Action("DuyetDonHang","DonHang")">Đơn đợi duyệt</a></li>
                            <li class="pc-item"><a class="pc-link" href="@Url.Action("DaDuyetDonHang","DonHang")">Đơn đã duyệt</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Vận chuyển</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Đơn bị hủy</a></li>
                        </ul>
                    </li>
                    @*khách hàng*@
                    <li class="pc-item">
                        <a href="tbl_bootstrap.html" class="pc-link "><span class="pc-micon"><i data-feather="users"></i></span><span class="pc-mtext">KHÁCH HÀNG</span></a>
                    </li>
                    <li class="pc-item pc-caption">
                        <label>Nâng cao sản phẩm</label>
                    </li>
                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link "><span class="pc-micon"><i data-feather="message-circle"></i></span><span class="pc-mtext">BÌNH LUẬN</span><span class="pc-arrow"><i data-feather="chevron-right"></i></span></a>
                        <ul class="pc-submenu">
                            <li class="pc-item"><a class="pc-link" href="#">Đánh giá khách hàng</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Khuyến mãi</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Lịch sử giá</a></li>
                        </ul>
                    </li>
                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link "><span class="pc-micon"><i data-feather="shopping-cart"></i></span><span class="pc-mtext">NHẬP HÀNG</span><span class="pc-arrow"><i data-feather="chevron-right"></i></span></a>
                        <ul class="pc-submenu">
                            <li class="pc-item"><a class="pc-link" href="@Url.Action("NhapHang","NhapSanPham")">Nhập sản phẩm</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Đối tác</a></li>
                        </ul>
                    </li>
                    <li class="pc-item pc-caption">
                        <label>Nhân sự</label>
                    </li>
                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link "><span class="pc-micon"><i data-feather="user-check"></i></span><span class="pc-mtext">NHÂN VIÊN</span><span class="pc-arrow"><i data-feather="chevron-right"></i></span></a>
                        <ul class="pc-submenu">
                            <li class="pc-item"><a class="pc-link" href="#">Danh sách</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Lương nhân</a></li>
                            <li class="pc-item"><a class="pc-link" href="#">Đánh giá</a></li>
                        </ul>
                    </li>
                    <li class="pc-item">
                        <a href="#" class="pc-link "><span class="pc-micon"><i data-feather="server"></i></span><span class="pc-mtext">BỘ PHẬN</span></a>
                    </li>
                    <li class="pc-item pc-caption">
                        <label>Thống kê</label>
                    </li>
                    <li class="pc-item">
                        <a href="#" class="pc-link "><span class="pc-micon"><i data-feather="layers"></i></span><span class="pc-mtext">Doanh thu</span></a>
                    </li>
                    <li class="pc-item">
                        <a href="#" class="pc-link "><span class="pc-micon"><i class="material-icons-two-tone">table_rows</i></span><span class="pc-mtext">....</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- [ navigation menu ] end -->
    <!-- [ Header ] start -->
    <header class="pc-header ">
        <div class="header-wrapper">
            <div class="mr-auto pc-mob-drp">
                <ul class="list-unstyled">
                    <li class="dropdown pc-h-item">
                        <a class="pc-head-link active dropdown-toggle arrow-none mr-0" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            Tiện ích
                        </a>
                        <div class="dropdown-menu pc-h-dropdown">
                            <a href="#!" class="dropdown-item">
                                <i class="material-icons-two-tone">account_circle</i>
                                <span>Tài khoản của bạn</span>
                            </a>
                           
                            <a href="#!" class="dropdown-item">
                                <i class="material-icons-two-tone">settings</i>
                                <span>Thiết lập</span>
                            </a>
                            <a href="#!" class="dropdown-item">
                                <i class="material-icons-two-tone">support</i>
                                <span>Support</span>
                            </a>
                            <a href="#!" class="dropdown-item">
                                <i class="material-icons-two-tone">https</i>
                                <span>Lock Screen</span>
                            </a>
                            <a href="#!" class="dropdown-item">
                                <i class="material-icons-two-tone">chrome_reader_mode</i>
                                <span>Đăng xuất</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="ml-auto">
                <ul class="list-unstyled">
                    <li class="dropdown pc-h-item">
                        <a class="pc-head-link dropdown-toggle arrow-none mr-0" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <i class="material-icons-two-tone">search</i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right pc-h-dropdown drp-search">
                            <form class="px-3">
                                <div class="form-group mb-0 d-flex align-items-center">
                                    <i data-feather="search"></i>
                                    <input type="search" class="form-control border-0 shadow-none" placeholder="Search here. . .">
                                </div>
                            </form>
                        </div>
                    </li>
                    <li class="dropdown pc-h-item">
                        <a class="pc-head-link dropdown-toggle arrow-none mr-0" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <img src="~/images/user/avatar-2.jpg" alt="user-image" class="user-avtar">
                            <span>
                                <span class="user-name">@Context.Session.GetString("HoTenAdmin")</span>
                                <span class="user-desc">Quản trị viên</span>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right pc-h-dropdown">
                            <a href="@Url.Action("Index","Login")" class="dropdown-item">
                                <i class="material-icons-two-tone">chrome_reader_mode</i>
                                <span>Đăng xuất</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>

        </div>
    </header>
    <!-- [ Header ] end -->

    <div class="pc-container">
        @RenderBody()
    </div>

    <!-- Required Js -->
    <script src="~/js/vendor-all.min.js"></script>
    <script src="~/js/plugins/bootstrap.min.js"></script>
    <script src="~/js/plugins/feather.min.js"></script>
    <script src="~/js/pcoded.min.js"></script>
    <script src="~/js/plugins/apexcharts.min.js"></script>
    <script src="~/js/pages/dashboard-sale.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/xuly.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>


</body>
</html>