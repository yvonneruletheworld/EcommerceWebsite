@using EcommerceWebsite.Utilities.ViewModel
@model List<SanPhamVM>
<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="page-header-title">
                        <h5 class="m-b-10">Danh sách sản phẩm</h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Sản phẩm</a></li>
                        <li class="breadcrumb-item">Danh sách sản phẩm</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @*<div class="col-sm-12 mb-3">
            <h5 class="mb-3">THAO TÁC</h5>
            <hr>
            <button class="btn mb-1 btn-primary"><i data-feather="save"></i> Thêm </button>
            <button class="btn mb-1 btn-primary"><i data-feather="delete"></i> Xóa</button>
            <button class="btn mb-1 btn-primary"><i data-feather="edit"></i> Sửa</button>
        </div>*@

        <div class="col-xl-12">
            <div class="card">
                <div class="card-body table-border-style">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Loại sản phẩm</th>
                                    <th>Giá Bán</th>
                                    <th>Số lượng tồn</th>
                                    <th>lợi nhuận</th>
                                    <th>Trạng thái</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        
                                    <tr>
                                        <td><a href="@Url.Action("Index","DoanhThu", new { maSanPham = item.MaSanPham})"> @item.MaHUIItem</a></td>
                                        <td class="col-3"><a  href="@Url.Action("Index","DoanhThu", new { maSanPham = item.MaSanPham})"> <span style="white-space: pre-wrap">@item.TenSanPham</span> </a></td>
                                        <td>@item.LoaiSanPham</td>
                                        <td>@string.Format("{0:0,0}", item.GiaBan) </td>
                                        @if (item.SoLuongTon <= 0)
                                        {
                                            <td><span class="text-danger"> @item.SoLuongTon</span></td>
                                        }
                                        else
                                        {
                                            <td>@item.SoLuongTon</td>
                                        }
                                        @if (item.loiNhuan <= 0)
                                        {
                                            <td><span class="text-danger"> @item.loiNhuan</span></td>
                                        }
                                        else
                                        {
                                            <td><span class="font-weight-bold"> @item.loiNhuan</span></td>
                                        }
                                    
                                        @if (item.Status.Equals("InActive"))
                                        {
                                            <td><span class="text-danger"> Tạm ngưng</span></td>
                                        }
                                        else
                                        {
                                            <td><span class="text-primary"> Hoạt động</span></td>
                                        }

                                    </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <hr />
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled">
                            <a class="page-link" href="#!" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#!">1</a></li>
                        <li class="page-item"><a class="page-link" href="#!">2</a></li>
                        <li class="page-item"><a class="page-link" href="#!">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#!">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>

        </div>

    </div>

</div>

