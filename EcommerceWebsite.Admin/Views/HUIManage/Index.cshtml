@using EcommerceWebsite.Utilities.ViewModel
@using EcommerceWebsite.Data.Enum
@model HUIManageVM
@{
    var listHuiVaDoanhSo = Model.ListHuiVaDoanhSo;
    var listKeys = listHuiVaDoanhSo.Keys;
}

<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">@*@sanPham.TenSanPham*@</h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Danh sách Combo </a></li>
                        <li class="breadcrumb-item"><a href="#!">@*  *@ </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->
    <!-- [ Main Content ] start -->

    <div class="row">
        <div class="col-sm-12">
            <h5 class="mb-3">THAO TÁC</h5>
            <hr>
            <p>
                <span>Lợi nhuận cao nhất: </span>
                <span>Lợi nhuận thấp nhất: </span>
            </p>
            <button class="btn mb-1 btn-primary" onclick="XuatNewHUI()"><i data-feather="save"></i> Thêm Input </button>
            <button class="btn mb-1 btn-primary" onclick="XuatNewData()"> <i data-feather="delete"></i> Cập Nhật Dữ Liệu </button>
            <p class="mb-6">
                <span >Thiết lập mức lợi nhuận mong muốn: </span><input type="number" class="form-control text-box single-line" value="1" min="1" style="max-width: 100px" id="min-util" /> %
            </p>
            
        </div>
    </div>
    

    @foreach (var key in listKeys)
    {

        <div class="row">
            <div class="col-sm-12">
                <h5 class="mb-3">Ngày tạo: @key</h5>
                <hr>

                <div class="card">
                    <div class="card-body table-border-style">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã Combo</th>
                                        <th>Tên Sản Phẩm - Số Lượng Bán Được</th>
                                        <th>Lượt Truy cập</th>
                                        <th>Giá Combo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var listCombo = listHuiVaDoanhSo[key];
                                        var listConvert = listCombo.GroupBy(i => i.ComboCode)
                                            .ToDictionary(i => i.Key, i => i.ToList());

                                        @foreach (var comboCode in listConvert.Keys)
                                        {
                                            var keyIndex = listKeys.ToList().IndexOf(key);
                                            <tr class="pointer-event" onclick="location.href = '@Url.Action("Index","HUIDetail",new { comboCode = comboCode, ngayTao = key, ngayNhapKe = keyIndex==0 ? DateTime.Now : listKeys.ElementAt(keyIndex - 1), keyIndex = keyIndex})'">

                                                <td>@comboCode</td>
                                                <td>

                                                    @foreach (var tsp in listConvert[comboCode])
                                                    {
                                                        <p>
                                                            <a href="@Url.Action("Index","DoanhThu", new { maSanPham = tsp.SanPhams.MaSanPham})"> @tsp.SanPhams.TenSanPham</a>  --
                                                            <!--<span>-->@*@(tsp.SanPhams.ChiTietHoaDons.Count() == 0? 0 : @tsp.SanPhams.ChiTietHoaDons[0].SoLuong)*@<!--</span>-->
                                                            <span>@tsp.DaBan</span>
                                                        </p>
                                                    }

                                                </td>
                                                <td>
                                                    @listConvert[comboCode].FirstOrDefault().LuotTruyCap
                                                </td>
                                                <td>
                                                    @listConvert[comboCode].Sum(c => c.Cost);
                                                </td>

                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

<script>
    function XuatNewHUI() {
        debugger;
        $.ajax({
            url: '/HUIManage/NhapNewHUI',
            success: function (data) {
                if (data.code == 1) {
                    location.reload();
                }
                else {
                    swal("Thất bại!", "Bạn hãy thử lại!", "error");
                }
            
            },
            error: function () {
                swal("Thất bại!", "Bạn hãy thử lại!", "error");
            }
        });
    }
    function XuatNewData() {
        var min = $('#min-util').val();
        $.ajax({
            url: '/HUIManage/XuatNewData?min=' + min,
                success: function (data) {
                    if (data.code == 1) {
                        location.reload();
                    }
                    else {
                        swal("Thất bại!", "Bạn hãy thử lại!", "error");
                    }
                },
                error: function () {
                    swal("Thất bại!", "Bạn hãy thử lại!", "error");
                }
            });
        }
</script>