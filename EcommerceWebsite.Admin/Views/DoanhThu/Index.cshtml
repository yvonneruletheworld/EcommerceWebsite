                                    <input type="text" class="form-control" id="GiaTriTT" placeholder="Giá trị">
                                </div>

                                <div class="col-md-6 mb-6">
                                    <label class="form-label" for="">Đơn Vị</label>
                                    <input type="text" class="form-control" id="DonViTT" placeholder="Đơn vị">
                                </div>
                                <div class="col-3">
                                    <button class="btn mt-3 mb-3 btn-primary float-left" type="button" onclick="ThemDinhLuong()">Thêm thông số</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="card-body table-border-style">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Thông Số</th>
                                    <th>Giá Trị</th>
                                    <th>Đơn Vị</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listDinhLuong)
                                {
                                    <tr>

                                        <td>@item.ThuocTinh</td>
                                        <td><input asp-for="@item.GiaTri" id="@string.Concat(item.MaDinhLuong,"_gt")" value="@item.GiaTri" type="text" class="form-control" /></td>
                                        @if (item.MaThuocTinh == ProductPorpertyCode.TT014.ToString())
                                        {
                                            if (item.GiaTri == null)
                                            {
                                                <td><img src="https://i.ibb.co/jzN4xyb/Blue-with-Gold-Laurel-Education-Logo-9-1-removebg-preview.png" style="width: 250px;" alt="@item.DonVi" data-target="#inputImg" data-toggle="modal" /></td>
                                            }
                                            else
                                            {
                                                <td><img src="@item.GiaTri" style="width: 250px;" alt="@item.DonVi" data-target="#inputImg" data-toggle="modal" /></td>

                                            }

                                        }
                                        else
                                        {
                                            <td><input asp-for="@item.DonVi" id="@string.Concat(item.MaDinhLuong,"_dv")" value="@item.DonVi" type="text" class="form-control" /></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <h2 class="mb-3">DOANH THU</h2>

        @foreach (var date in listKeys)
        {
            <div class="row">
                <div class="col-sm-12">
                    <h5 class="mb-3">Ngày nhập: @date</h5>
                    <p>
                        <span>Đơn giá nhập: @string.Format("{0:0,0}", dicNhapBan[date].FirstOrDefault().DonGiaNhap)</span><br />
                        <span>Số lượng nhập: @dicNhapBan[date].FirstOrDefault().SoLuongNhap</span><br />
                        <span>Tổng nhập: @string.Format("{0:0,0}", dicNhapBan[date].FirstOrDefault().TongTienNhap)</span><br />
                    </p>
                    <hr>

                    <div class="card">
                        <div class="card-body table-border-style">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Ngày Bán</th>
                                            <th>Đã Bán</th>
                                            <th>Số Tồn</th>
                                            <th>Đơn Giá Bán</th>
                                            <th>Tổng Tiền Bán</th>
                                            <th>Lợi Nhuận</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                    var listHoaDon = dicNhapBan[date];

                                    @foreach (var hd in listHoaDon)
                                            {
                                        <tr>

                                            <td>@hd.NgayBan</td>
                                            <td>
                                                @hd.DaBan
                                            </td>
                                            <td>
                                                @hd.SoLuongTon
                                            </td>
                                            <td>
                                                @string.Format("{0:0,0}", hd.DonGiaBan) VNĐ
                                            </td>
                                            <td>
                                                @string.Format("{0:0,0}", hd.TongTienBan) VNĐ
                                            </td>
                                            @if (hd.LoiNhuan <= 0)
                                            {
                                                <td><span class="text-danger"> @hd.LoiNhuan</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="font-weight-bold"> @hd.LoiNhuan</span></td>
                                            }

                                        </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>





