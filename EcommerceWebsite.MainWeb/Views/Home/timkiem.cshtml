@using EcommerceWebsite.Utilities.Output.Main
@model List<SanPhamOutput>
<div class="content-wraper pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="single-banner shop-page-banner">
                    <a href="#">
                        <img src="~/images/bg-banner/2.jpg" alt="Li's Static Banner">
                    </a>
                </div>
                <div class="shop-top-bar mt-30">
                    <div class="shop-bar-inner">
                        <div class="toolbar-amount">
                            <h5>Tìm thấy @Model.Count kết quả " @ViewBag.timKiem " </h5>
                        </div>
                    </div>
                </div>
                <div class="shop-products-wrapper">
                    <div class="tab-content">
                        <div id="grid-view" class="tab-pane fade active show" role="tabpanel">
                            <div class="product-area shop-product-area">
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-lg-3 col-md-4 col-sm-6 mt-40">
                                            <!-- single-product-wrap start -->
                                            <div class="single-product-wrap">
                                                <div class="product-image">
                                                    <a href="@Url.Action("Index", "Detail", new {  prdId = item.MaSanPham, prdMaDanhMuc = item.MaLoai})">
                                                        <img src="@item.HinhAnh" alt="@item.TenSanPham">
                                                    </a>
                                                </div>
                                                <div class="product_desc">
                                                    <div class="product_desc_info">
                                                        <div class="product-review">
                                                            <h5 class="manufacturer">
                                                                <a href="@Url.Action("Index", "CuaHang",new {loaiHang =  item.MaLoai})">@item.LoaiSanPham</a>
                                                            </h5>
                                                            <div class="rating-box">
                                                                <ul class="rating">
                                                                    <li><i class="fa fa-star-o"></i></li>
                                                                    <li><i class="fa fa-star-o"></i></li>
                                                                    <li><i class="fa fa-star-o"></i></li>
                                                                    <li class="no-star"><i class="fa fa-star-o"></i></li>
                                                                    <li class="no-star"><i class="fa fa-star-o"></i></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                        <h4><a class="product_name" href="single-product.html">@item.TenSanPham</a></h4>
                                                        <div class="price-box">
                                                            <span class="new-price">@string.Format("{0:0,0}", item.giaBan)</span>
                                                        </div>
                                                    </div>
                                                    <div class="add-actions">
                                                        <input id="giaSanPham-@item.MaSanPham" value="@item.giaBan" hidden />
                                                        <ul class="add-actions-link">
                                                            <li class="add-cart active"><a href="#" class="btn-add-cart" data-id="@item.MaSanPham">Thêm vào giỏ</a></li>
                                                            <li><a href="#" title="quick view" class="quick-view-btn" data-toggle="modal" data-target="#exampleModalCenter"><i class="fa fa-eye"></i></a></li>
                                                            <li><a class="links-details btn-them-yeuthich" data-id="@item.MaSanPham" href="#"><i class="fa fa-heart-o"></i></a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- single-product-wrap end -->
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="paginatoin-area">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <p>Showing 1-12 of 13 item(s)</p>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <ul class="pagination-box">
                                        <li>
                                            <a href="#" class="Previous"><i class="fa fa-chevron-left"></i> Previous</a>
                                        </li>
                                        <li class="active"><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li>
                                            <a href="#" class="Next"> Next <i class="fa fa-chevron-right"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- shop-products-wrapper end -->
            </div>
        </div>
    </div>
</div>