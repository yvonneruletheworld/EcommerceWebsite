<script>
    var isValid = false;
    //Email
    $('#EmailKT').on('blur', function () {
        var EmailKT = $('#EmailKT').val();
        var regexp = /^\w+([.+.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        if (!regexp.test(EmailKT)) {
            $('#trangThaiMail').text('Email không hợp lệ.');
        }
        else {
            $('#trangThaiMail').text('');
            isValid = true;
        }
    });
    //Số điện thoại
    $('#SdtKT').on('blur', function () {
        var KTPhone = $('#SdtKT').val();
        var phoneno = /((^(\+84|84|0|0084){1})(3|5|7|8|9))+([0-9]{8})$/;
        if (!phoneno.test(KTPhone)) {
            $('#trangThaiSDT').text('Số điện thoại không hợp lệ.');
        }
        else {
            $('#trangThaiSDT').text('');
            isValid = true;
        }

    });
    //Mật khẩu
    $('#MatKhauKT').on('blur', function () {
        var kTMatKhau = $('#MatKhauKT').val();

        var matkhau = /^.*(?=.{8,16})(?=.*[a-zA-Z])(?=.*\d)(?=.*[!#$ %&?"]).*$/;
        if (!matkhau.test(kTMatKhau)) {
            $('#trangThaiMatKhau').text('Mật khẩu phải từ 8-16 kí tự và có chứa kí tự hoa, đặc biệt.')
        }
        else {
            $('#trangThaiMatKhau').text('');
            isValid = true;
        }
    });
    //Nhập lại
    $('#nhapLaiMK').on('blur', function () {
        var _pass = $("#MatKhauKT").val();
        var _repass = $("#nhapLaiMK").val();
        if (_pass != _repass) {
            $('#trangThaiNhapLaiMK').text('Sai mật khẩu.')
        }
        else {
            $('#trangThaiNhapLaiMK').text('');
            isValid = true;
        }
    });
    function submitRegister() {
        
        debugger;
        //var isValid = $("#form-register-id").valid();
        if (isValid) {
            //alert("OK");
            //prepare data
            var fd = new FormData();
            fd.append('HoTen', $('#HoTen').val());
            fd.append('SDT', $('#SdtKT').val());
            fd.append('Email', $('#EmailKT').val());
            fd.append('MatKhau', $('#MatKhauKT').val());
            fd.append('DiaChi', $('#DiaChi').val());
            fd.append('XacNhanMatKhau', $('#nhapLaiMK').val());
            fd.append('TenDangNhap', $('#TenDangNhap').val());
            fd.append('Type', @Model.Type);

            $.ajax({
                url: 'DangKy',
                type: 'POST',
                dataType: 'json',
                data: fd,
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                success: function (result) {
                    if (result === '@Messages.Login_Fail')
                        alert("Lỗi đăng ký");
                    fd = new FormData();
                },
                error: function (err)
                {
                    console.log(err);
                    fd = new FormData();
                }
            });
        } else {
            alert("Thông tin không hợp lệ");
        }
    }

