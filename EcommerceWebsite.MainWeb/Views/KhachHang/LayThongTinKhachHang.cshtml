@using EcommerceWebsite.Utilities.ViewModel
@model ThongTinKhachHangVM

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            <div class="my-4">
                <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="false">Thông tin cá nhân</a>
                    </li>
                </ul>
                <form>
                    <div class="form-group">
                        <label for="firstname">Họ tên</label>
                        <input type="text" id="firstname" class="form-control" placeholder="Nhập họ tên" value="@Model.HoTen" />
                    </div>
                    <div class="form-group">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="Nhập email" value="@Model.Email" />
                    </div>
                    <div class="form-group">
                        <label for="inputEmail4">Số điện thoại</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="Nhập email" value="@Model.SoDienThoai" />
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputState5">Giới tính</label>
                            @if (Model.GioiTinh == true)
                            {
                                <select id="inputState5" class="form-control">
                                    <option selected="">Nam</option>
                                    <option>Nữ</option>
                                </select>
                            }
                            else
                            {
                                <select id="inputState5" class="form-control">
                                    <option>Nam</option>
                                    <option selected="">Nữ</option>
                                </select>
                            }
                        </div>
                        <div class="form-group col-md-6">

                        </div>
                        <div class="form-group col-md-2">

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                </form>
            </div>
        </div>
    </div>

</div>