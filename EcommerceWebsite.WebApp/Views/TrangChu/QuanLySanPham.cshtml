
@{
    ViewData["Title"] = "QuanLySanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Table</a></li>
                    <li class="active">Data table</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Quản lý</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng tồn</th>
                                    <th>Hình ảnh</th>
                                    <th>Trạng Thái</th>
                                    <th>Hãng sản phẩm</th>
                                    <th>Loại sản phẩm</th>
                                </tr>
                            </thead>
                            <tbody id="loadSanPham">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->
<script>
        $(document).ready(() => {
            init();
        });
    //FUNC
    function init() {
        getDataSanPham();
    }
    //san pham
    function getDataSanPham() {
        $.ajax({
            url: '/get-data-allquanlysanpham',
            type: 'GET',
            dataType: 'html',
            success: (result) => {
                $("#loadSanPham")[0].innerHTML = result;
            },
            error: (err) => {
                alert('failed');
                console.log(err);
            }
        });
    }
 </script>
