<script>
    $(document).ready(function () {
        init();
        setUpProductPrice();
    });

    function init() {
        //$('.danh-muc-selection-id .select-styled').text('@sanPham.LoaiSanPham');
        var danhMucSelected = document.getElementById('danh-muc-selection-id');
        danhMucSelected.value = '@sanPham.MaLoai';
        var nhanHieuSelected = document.getElementById('nhan-hieu-selection-id');
        nhanHieuSelected.value = '@sanPham.MaNhanHieu';
        @*$('.nhan-hieu-selection-id .select-styled').text('@sanPham.NhanHieu');*@
        if ('@sanPham.NguoiSuaCuoi' === '1')
            $('#percentageAgree').prop('checked', true);
    }

    function onCheckPercent() {
        setUpProductPrice();
    }

    function setUpProductPrice() {

        var type = document.getElementById("percentageAgree");

        var giaNhapTxt = @giaNhapGanNhat;
        var giaBanTxt = @sanPham.giaBan;
        if (giaBanTxt !== undefined && giaBanTxt !== '') {
            var giaNhap = Number(giaNhapTxt);
            var giaBan = Number(giaBanTxt);
            if (type.checked) {
                //by percent
                $('#loi-nhuan-title')[0].innerHTML = 'Lợi nhuận (%)';

                var ln = ((giaBan - giaNhap) / giaNhap) * 100;
                $('#LoiNhuan').val(ln);
            }
            else {
                var ln = giaBan - giaNhap;
                var tien = parseFloat(ln);
                var tien2 = format2(tien);
              
                $('#LoiNhuan').val(tien2);
                $('#loi-nhuan-title')[0].innerHTML = 'Lợi nhuận (VND)';
            }
        }
    }

    function updateProductPride(value) {
        var giaNhapTxt = @giaNhapGanNhat;
        var type = document.getElementById("percentageAgree");
        if (giaNhapTxt !== undefined && giaNhapTxt !== '') {
            var giaNhap = Number(giaNhapTxt);
            var loiNhuan = Number(value);
            if (type.checked) {
                //by percent
                var giaBan = giaNhap * (1 + (loiNhuan / 100));
                var tien = parseFloat(giaBan);
                var tien2 = format2(tien);
                $('#ThanhTien').val(tien2);
            }
            else {
                var giaBan = giaNhap + loiNhuan;
                var tien = parseFloat(giaBan);
                var tien2 = format2(tien);
                $('#ThanhTien').val(tien2);
            }

        }
    }

    function format2(n) {
        return n.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
    }

    function SubmitForm() {
        var loiNhuanMongMuon = $('#LoiNhuan').val();
        if (Number(loiNhuanMongMuon) <= 0) {
            $("#loi-nhuan-error")[0].innerHTML = 'Lợi nhuận phải lớn hơn 0';
            return;
        }
        else if (isNaN(loiNhuanMongMuon)) {
            $("#loi-nhuan-error")[0].innerHTML = 'Giá trị không hợp lệ';
            return;
        }
        else {
            $("#loi-nhuan-error")[0].innerHTML = '';
            var fd = new FormData();
            var type = document.getElementById("percentageAgree");

            var masp = $('#SanPham_MaSanPham').val();
            var tensp = $('#SanPham_TenSanPham').val();
            var maloai = $('#danh-muc-selection-id').val();
            var nhanhieu = $('#nhan-hieu-selection-id').val();
            var percentageAgree = type.checked ? 1 : 0;
            var giaBan = $('#giaBan').val();
            var thanhTien = $('#ThanhTien').val();

            fd.append('MaSanPham', masp);
            fd.append('TenSanPham', tensp);
            fd.append('MaLoai', maloai);
            fd.append('NhanHieu', nhanhieu);
            fd.append('NguoiSuaCuoi', percentageAgree);
            fd.append('giaBan', giaBan);
            fd.append('ThanhTien', thanhTien);


            $.ajax({
                url: '/cap-nhat-san-pham',
                type: 'POST',
                dataType: 'json',
                data: fd,
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                success: function (result) {
                    location.reload();
                },
                error: function (err) {
                    location.reload();
                }
            });
        }
    }
    function ThemDinhLuong() {


        var masp = $('#SanPham_MaSanPham').val();
        var MaThuocTinh = $('#thong-so-selection-id').val();
        var GiaTri = $('#GiaTriTT').val();
        var DonVi = $('#DonViTT').val();

        $.ajax({
            url: '/DoanhThu/ThemDinhLuongSanPham',
            dataType: 'json',
            data: {
                maThuocTinh: MaThuocTinh,
                maSanPham: masp,
                giaTri: GiaTri,
                DonVi: DonVi
            },

            success: function (result) {
                location.reload();
            },
            error: function (err) {
                location.reload();
            }
        });
    }
</script>