<div class="text-center">
    @if (Model != null)
    {
        <h1 class="display-4">Xin chào, @Model.UserName</h1>
    }
    else
    {
        <h1 class="display-4">Nhập số điện thoại để thanh toán</h1>
    }
    <div class="error-msg text-danger"></div>
    <input type="text" class="d-inline mr-2" placeholder="Số điện thoại" id="text-phone-cash" required>
    <!--<!--<button type="button" class="btn btn-primary btn-user btn-block" data-toggle="modal" data-target="#SavedRegistration">--><!--Saved Registration*--><!--</button>-->
    <button type="button" onclick="getUserState()" class="btn btn-block d-inline btn-primary">Đặt hàng</button>
</div>

<div class="modal fade" id="mdl-login-form" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="continue-login" asp-action="Index" asp-controller="Home" method="post">
                <!-- Modal content-->
                <div class="modal-header">
                    <p>Cảm ơn vì đã chọn mua hàng</p>
                    <p>Xác nhận tài khoản để tiến hàng đặt hàng</p>
                </div>
                <div id="form-login-container"></div>

            </form>

            <div class="modal-footer">
                <button id="login-cancel" class="btn btn-default btn-close" data-dismiss="modal" onclick="hannleCancel()"> Hủy</button>
                <button id="login-submit" class="btn btn-default btn-submit btn-primary" onclick="continueLogin()">Tiếp tục</button>
            </div>
        </div>
    </div>
</div>

<script>

    var isOTP = 0;

    function getUserState() {
        var phoneInput = $('#text-phone-cash').val();
        console.log(phoneInput);

        ///validate số điện thoại
        ///chỉnh lại thông báo và form modal

        $.ajax({
            url: '/get-form-login?phoneNumber=' + phoneInput + '&isPhoneNumber=true',
            type: 'GET',
            success: (result) => {
                console.log(result.code);
                $('#mdl-login-form').modal('hide');
                if (result.code === '@Messages.Login_PhoneNumEmpty')
                    alert("sdt empty");
                else if (result.code === '@Messages.Login_PhoneNumIsNotExist')
                    alert("sdt not exit");
                else if (result.code === '@string.Empty')
                    alert("sdt is not phone num");
                else {
                    $('#mdl-login-form').modal('show');
                    $('#form-login-container')[0].innerHTML = result;
                }
            },
            error: (err) => {
                alert('failed');
                console.log(err);
                $('#mdl-login-form').hide();
            }
        });
    }

    function continueLogin() {
        console.log(isOTP);
        if (isOTP === 0) {
            var frmData = $("#continue-login")[0];
            var data = new FormData(frmData);

            $.ajax({
                url: "/Login",
                contentType: false,
                processData: false,
                method: "POST",
                data: data,
                success: (result) => {
                    console.log(result.code);
                    if (result.code === '@Messages.OTP_SentSuccess') {
                        $("#otp-input-verify").show();
                        $("#form-login-input").hide();
                        var btn = $("#login-submit");
                        $("#login-submit").html("Xác nhận");
                        console.log(btn);
                        $("#login-cancel").html("Trở về");
                        isOTP = 1;
                    }
                    else {
                        $('#error-login-msg').innerText = result.code;
                    }
                },
                error: (err) =>{
                    console.log(err);
                }
            });
        }
        else {
            var otpCode = $("#otp-input").val();
            var input = $("#txt-login").val();
            console.log(otpCode);
            console.log(input);
            $.ajax({
                url: "/verify-otp-code?otpInput=" + otpCode + "&input=" + input,
                method: 'POST',
                success: (result) => {
                    if (result.code === '@Messages.OTP_VerifySuccess') {
                        history.go(0);
                    } else {
                        var d = $('#error-login-msg');
                        console.log(result.code);
                        console.log(d);
                        d.text(result.code);
                    }
                },
                error: (err) => {
                    console.log(err)
                    alert('@Messages.OTP_ServerDisconnectable')
                }
            });
            console.log(otpCode);
        }
    }

    function hannleCancel() {

    }
</script>