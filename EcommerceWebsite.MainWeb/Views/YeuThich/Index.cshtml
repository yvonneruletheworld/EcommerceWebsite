@using EcommerceWebsite.Utilities.ViewModel
@model List<SanPhamVM>

<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Trang chủ</a></li>
                <li class="active">Sản phẩm yêu thích</li>
            </ul>
        </div>
    </div>
</div>
<!-- Li's Breadcrumb Area End Here -->
<!--Wishlist Area Strat-->
<div class="wishlist-area pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form action="#">
                    <div class="table-content table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="li-product-remove">Xóa</th>
                                    <th class="li-product-thumbnail">Hình</th>
                                    <th class="cart-product-name">Sản phẩm</th>
                                    <th class="li-product-stock-status">Giá</th>
                                    <th class="li-product-add-cart">Thêm vào giỏ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any() || Model.Count != 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="li-product-remove"><a  class="btn-them-yeuthich"  data-id="@item.MaSanPham"><i class="fa fa-trash-o"></i></a></td>
                                            <td class="li-product-thumbnail" style="width: 150px"><a href="#"><img src="@item.HinhAnh" alt="@item.TenSanPham" width="100%"></a></td>
                                            <td class="li-product-name"><a href="@Url.Action("Index", "Detail", new {  prdId = item.MaSanPham, prdMaDanhMuc = item.MaLoai })">@item.TenSanPham</a></td>
                                            <td class="li-product-stock-status"><span class="in-stock">@string.Format("{0:0,0}", item.GiaBan) VNĐ</span></td>
                                            <td class="li-product-add-cart"><a href="#">Thêm vào giỏ</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>